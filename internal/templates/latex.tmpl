\newcommand{\ccomment}[6]{
    \begin{tcolorbox}[title=\textbf{#2}, colback=white, coltitle=black, colbacktitle=#1]
    \textbf{Comment:} #3
    \tcblower
    \textbf{Response:} #4
      \\ \textbf{Action:} #5
  \\ \textbf{Where:} #6
\end{tcolorbox}



\newcommand{\ccomment}[{{ .LenHeaders }}]{
    \begin{tcolorbox}[title=\textbf{#2}, colback=white, coltitle=black, colbacktitle=#1]
    \textbf{Comment:} #3
    \tcblower
    {{- range .Headers}}
    \textbf{ {{ .Name }}:} #{{- .Idx }}
    {{ end }}
\end{tcolorbox}

